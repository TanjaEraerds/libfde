pipeline { 
    agent any 
    stages {
        stage('show config') { 
            steps { 
                sh 'env'
            }
        }
        stage('Build') { 
            steps {
                script {
                    def fc = ['ifort', 'gfortran']
                    for (int i = 0; i < fc.size(); ++i) {
                        sh "make clean built FC=${fc[i]} CFG=release -j4"
                    }
                }
            }
        }
        stage('Testing') {
            steps { 
                dir('test') {
                    sh 'rm -rf exe'
                    script {
                        def fc   = ['ifort', 'gfortran']
                        def test = ['abstract_list', 'adt', 'hash_map', 'item', 'string', 'charstacker']
                        for (int i = 0; i < fc.size(); ++i) {
                            for (int j = 0; j < test.size(); ++j) {
                                sh "make clean test_${test[j]} FC=${fc[i]} CFG=release"
                                sh "`make eval,OUT_DIR FC=${fc[i]} CFG=release`/test_${test[j]}"
                            }
                        }
                    }
                }
            }
        }
    }
}

